# Backend URL for Vite proxy (used in vite.config.ts)
# This is the target URL that the Vite dev server will proxy requests to
VITE_BACKEND_URL=http://localhost:3001

# API URL for production builds (used in utils/index.ts)
# This is used when building for production (npm run build)
VITE_API_URL=http://localhost:3001/api/v1

# Example configurations for different environments:
# Local development:
# VITE_BACKEND_URL=http://localhost:3001
# VITE_API_URL=http://localhost:3001/api/v1

# Production (Render):
# VITE_BACKEND_URL=https://commerce-app-db.onrender.com
# VITE_API_URL=https://commerce-app-db.onrender.com/api/v1

# Network development (if backend is on another machine):
# VITE_BACKEND_URL=http://192.168.1.100:3001
# VITE_API_URL=http://192.168.1.100:3001/api/v1
